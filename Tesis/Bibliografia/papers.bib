file = {:home/pao/Dropbox/Tesis/Bibliograf{\'{i}}a/Unknown - 2012 - Verification of a Synthesized Method for the Calculation of Low-Level Climatological Wind Fields Using a Mesoscale Boun.pdf:pdf},
