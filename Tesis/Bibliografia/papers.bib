issn = {01698095},
journal = {Atmospheric Research},
keywords = {Athens, Greece,Backscatter lidar,Complex urban terrain,PBL parameterization scheme,Planetary boundary-layer height,Weather Research and Forecasting (WRF) model},
pages = {185--201},
publisher = {The Authors},
title = {{Sensitivity of boundary-layer variables to PBL schemes in the WRF model based on surface meteorological observations, lidar, and radiosondes during the HygrA-CD campaign}},
